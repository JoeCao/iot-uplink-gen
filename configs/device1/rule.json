{
  "productName": "电机",
  "simulationConfig": {
    "speed": {
      "method": "randomRange",
      "min": 500,
      "max": 2500,
      "step": 10
    },
    "temperature": {
      "method": "wave",
      "min": 20,
      "max": 60,
      "amplitude": 5,
      "wavePeriod": 300
    },
    "voltage": {
      "method": "randomRange",
      "min": 220,
      "max": 380,
      "step": 1
    },
    "current": {
      "method": "randomRange",
      "min": 10,
      "max": 50,
      "step": 0.5
    },
    "power": {
      "method": "randomRange",
      "min": 1000,
      "max": 5000,
      "step": 50
    },
    "torque": {
      "method": "randomRange",
      "min": 100,
      "max": 300,
      "step": 5
    },
    "vibration": {
      "method": "randomRange",
      "min": 1,
      "max": 5,
      "step": 0.1
    },
    "efficiency": {
      "method": "randomRange",
      "min": 80,
      "max": 95,
      "step": 0.1
    },
    "frequency": {
      "method": "randomRange",
      "min": 45,
      "max": 55,
      "step": 0.1
    },
    "runtime": {
      "method": "accumulate",
      "start": 0,
      "step": 1
    }
  },
  "events": [
    {
      "identifier": "overheat_alarm",
      "triggerCondition": "temperature>=85",
      "cooldown": 300
    }
  ],
  "services": {
    "start_motor": {
      "responseStrategy": "fixed",
      "possibleResponses": [
        {
          "code": 200,
          "msg": "启动成功",
          "desc": "电机启动成功"
        },
        {
          "code": 500,
          "msg": "启动失败",
          "desc": "电机启动失败"
        }
      ]
    },
    "stop_motor": {
      "responseStrategy": "fixed",
      "possibleResponses": [
        {
          "code": 200,
          "msg": "停止成功",
          "desc": "电机停止成功"
        },
        {
          "code": 500,
          "msg": "停止失败",
          "desc": "电机停止失败"
        }
      ]
    },
    "adjust_speed": {
      "responseStrategy": "fixed",
      "possibleResponses": [
        {
          "code": 200,
          "msg": "转速调整成功",
          "desc": "电机转速调整成功"
        },
        {
          "code": 500,
          "msg": "转速调整失败",
          "desc": "电机转速调整失败"
        }
      ]
    }
  }
