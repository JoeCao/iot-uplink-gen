{
  "productName": "智能传感器",
  "simulationConfig": {
    "temperature": {
      "method": "wave",
      "min": "20.0",
      "max": "35.0",
      "amplitude": "5.0",
      "wavePeriod": 120
    },
    "humidity": {
      "method": "randomRange",
      "min": "30.0",
      "max": "80.0"
    },
    "pressure": {
      "method": "randomRange",
      "min": "950.0",
      "max": "1050.0"
    },
    "battery": {
      "method": "accumulate",
      "start": "100",
      "step": "-0.1"
    },
    "status": {
      "method": "enum",
      "enumValues": ["online", "offline", "maintenance"],
      "switchProbability": 0.1
    }
  },
  "events": [
    {
      "identifier": "temperature_alarm",
      "triggerCondition": "temperature > 30",
      "cooldown": 300
    },
    {
      "identifier": "low_battery",
      "triggerCondition": "battery < 20",
      "cooldown": 600
    }
  ],
  "services": {
    "calibrate": {
      "responseStrategy": "random",
      "possibleResponses": [
        {
          "code": 200,
          "msg": "success",
          "desc": "传感器校准成功"
        },
        {
          "code": 400,
          "msg": "error",
          "desc": "传感器校准失败，请检查传感器状态"
        }
      ]
    },
    "reset": {
      "responseStrategy": "fixed",
      "possibleResponses": [
        {
          "code": 200,
          "msg": "success",
          "desc": "设备重置成功"
        }
      ]
    }
  }
}